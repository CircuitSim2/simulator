package gui;

import java.awt.Frame;
import java.awt.Label;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.border.EmptyBorder;

public class SettingDialog extends JDialog
{
	private JPanel contentPane;
	private JTextField textFieldTime;
	private JTextField textFieldSwitchOnTime;
	private JTextField textFieldSwitchOffTime;

	public SettingDialog(Frame frame, String title)
	{
		super(frame, title);

		setTitle("シミュレーションの設定");
		setBounds(frame.getX() + 100, frame.getY() + 100, 518, 359);
		setDefaultCloseOperation(JFrame.HIDE_ON_CLOSE);

		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);

		JLabel lbls = new JLabel("実行時間[s]");
		lbls.setBounds(31, 35, 79, 13);
		contentPane.add(lbls);

		textFieldTime = new JTextField();
		textFieldTime.setBounds(328, 32, 96, 19);
		contentPane.add(textFieldTime);
		textFieldTime.setColumns(10);


		Label label = new Label("スイッチのON・OFF時間[s]");
		label.setBounds(31, 69, 164, 23);
		contentPane.add(label);

		textFieldSwitchOnTime = new JTextField();
		textFieldSwitchOnTime.setBounds(328, 69, 96, 19);
		contentPane.add(textFieldSwitchOnTime);
		textFieldSwitchOnTime.setColumns(10);

		JButton button_1 = new JButton("決定");
		button_1.setBounds(279, 100, 91, 21);
		contentPane.add(button_1);

		JButton button = new JButton("キャンセル");
		button.setBounds(382, 100, 108, 21);
		contentPane.add(button);
	}
}
