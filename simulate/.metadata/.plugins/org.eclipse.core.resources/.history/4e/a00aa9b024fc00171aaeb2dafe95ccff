package gui;

import java.awt.Frame;
import java.awt.Label;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.JTextField;
import javax.swing.border.EmptyBorder;

public class SettingDialog extends JDialog implements ActionListener
{
	private JPanel contentPane;
	private JTextField textField;
	private JTextField textField_1;
	private JTextField textField_2;
	private JTextField textField_3;
	private JTextField textField_4;
	private JTextField textField_5;

	JRadioButton radioButton_1 = new JRadioButton("直流電流");
	JRadioButton radioButton = new JRadioButton("交流電流");

	public SettingDialog(Frame frame, String title)
	{
		super(frame, title);
		setDefaultCloseOperation(JFrame.HIDE_ON_CLOSE);

		setTitle("シミュレーションの設定");
		setBounds(frame.getX() + 100, frame.getY() + 100, 518, 409);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);

		JLabel lbls = new JLabel("実行時間[s]");
		lbls.setBounds(31, 35, 79, 13);
		contentPane.add(lbls);

		textField = new JTextField();
		textField.setBounds(328, 32, 96, 19);
		contentPane.add(textField);
		textField.setColumns(10);


		Label label = new Label("スイッチのON・OFF時間[s]");
		label.setBounds(31, 69, 164, 23);
		contentPane.add(label);

		textField_1 = new JTextField();
		textField_1.setBounds(328, 69, 96, 19);
		contentPane.add(textField_1);
		textField_1.setColumns(10);

		Label label_1 = new Label("電源の設定");
		label_1.setBounds(31, 108, 69, 23);
		contentPane.add(label_1);

		//JRadioButton radioButton_1 = new JRadioButton("直流電流");
		radioButton_1.setBounds(56, 145, 113, 21);
		contentPane.add(radioButton_1);
		radioButton_1.addActionListener(this);

		Label label_2 = new Label("電圧[V]");
		label_2.setBounds(177, 166, 69, 23);
		contentPane.add(label_2);

		textField_2 = new JTextField();		//電圧
		textField_2.setBounds(328, 170, 96, 19);
		contentPane.add(textField_2);
		textField_2.setColumns(10);


		Label label_3 = new Label("ON・OFF時間[s]");
		label_3.setBounds(177, 197, 97, 23);
		contentPane.add(label_3);

		textField_3 = new JTextField();		//ON・OFF時間[s]
		textField_3.setBounds(328, 201, 96, 19);
		contentPane.add(textField_3);
		textField_3.setColumns(10);

		//JRadioButton radioButton = new JRadioButton("交流電流");
		radioButton.setBounds(56, 231, 113, 21);
		contentPane.add(radioButton);
		radioButton.addActionListener(this);

		Label label_4 = new Label("最大電圧[V]");
		label_4.setBounds(177, 259, 69, 23);
		contentPane.add(label_4);

		textField_4 = new JTextField();
		textField_4.setBounds(328, 263, 96, 19);
		contentPane.add(textField_4);
		textField_4.setColumns(10);

		Label label_5 = new Label("周期[Hz]");
		label_5.setBounds(177, 290, 69, 23);
		contentPane.add(label_5);

		textField_5 = new JTextField();
		textField_5.setBounds(328, 294, 96, 19);
		contentPane.add(textField_5);
		textField_5.setColumns(10);


		JButton button_1 = new JButton("決定");
		button_1.setBounds(279, 337, 91, 21);
		contentPane.add(button_1);

		JButton button = new JButton("キャンセル");
		button.setBounds(382, 337, 108, 21);
		contentPane.add(button);
	}

	public void actionPerformed(ActionEvent e)
	{
		boolean status1 = radioButton.isSelected();
		if(status1 == true)
		{
			radioButton_1.setEnabled(false);
			textField_3.setEnabled(false);
			textField_2.setEnabled(false);
		}

		if(status1 == false)
		{
			radioButton_1.setEnabled(true);
			textField_3.setEnabled(true);
			textField_2.setEnabled(true);
		}

		boolean status = radioButton_1.isSelected();
		if(status == true)
		{
			radioButton.setEnabled(false);
			textField_4.setEnabled(false);
			textField_5.setEnabled(false);
		}

		if(status == false)
		{
			radioButton.setEnabled(true);
			textField_4.setEnabled(true);
			textField_5.setEnabled(true);
		}

	}
}
